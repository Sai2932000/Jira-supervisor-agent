# === Jira credentials ===
JIRA_API_TOKEN=your_jira_token
JIRA_USERNAME=your_jira_email
JIRA_INSTANCE_URL=https://yourcompany.atlassian.net
JIRA_CLOUD=True

# === LangSmith / LangChain tracing ===
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=your_langsmith_api_key
LANGSMITH_PROJECT=your_project_name

# === Tavily Search (optional) ===
TAVILY_API_KEY=your_tavily_key

# === Email (SMTP via Mailtrap) ===
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USERNAME=your_mailtrap_user
SMTP_PASSWORD=your_mailtrap_pass
FROM_EMAIL=agent@qt.com

# === LLM configuration ===
MODEL_ID=gemini-2.5-flash
MODEL_PROVIDER=google_vertexai

# === Google Cloud credentials ===
GOOGLE_APPLICATION_CREDENTIALS=application_default_credentials.json
CLOUDSDK_CORE_PROJECT=your_project_id
GOOGLE_CLOUD_PROJECT=your_project_id
